<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".register">

    <RelativeLayout
        android:id="@+id/relativeLayoutRe1"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/image">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/border_containers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:alpha=".62"
            android:gravity="center_horizontal"
            android:text="Registrate a Easy Plan"
            android:textColor="#EE440F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRegister"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <EditText
            android:id="@+id/user_register"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRegister"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F"
            />

        <EditText
            android:id="@+id/verify_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="8dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Verify Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F"
            />

        <EditText
            android:id="@+id/birthdate"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_password"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Birhdate"
            android:inputType="date"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <EditText
            android:id="@+id/count"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify_password"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Country"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <EditText
            android:id="@+id/type"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthdate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Type"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <EditText
            android:id="@+id/nDoc"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/count"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="25dp"
            android:alpha=".50"
            android:ems="10"
            android:hint="Number"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="#D7DC994F" />

        <Button
            android:id="@+id/btn_registro"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/nDoc"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/border_buttom"
            android:text="Registrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>